{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		{% if post.get_thumbnail %}
			<a href="{{post.link}}"><img src="{{post.thumbnail.src}}" /></a>
		{% endif %}

		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<h1 class="article-h1">{{post.title}}</h1>
			<div class="article-body">
				{{post.body}}
			</div>
		</article>

		<h3>{{post.post_type}}s</h3>
		<ul>
			{% for sibling in post.siblings %}
				<li><a class="sibling-link" href="{{sibling.get_link}}">{{sibling.title}}</a></li>
			{% endfor %}
		</ul>
	</div><!-- /content-wrapper -->
{% endblock %}
