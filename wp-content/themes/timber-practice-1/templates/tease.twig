<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h2 class="h2">Generic teaser: <a href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.summary}}</p>
		{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src|resize(500, 300, 'center')}}" />
		{% endif %}
	{% endblock %}
</article>