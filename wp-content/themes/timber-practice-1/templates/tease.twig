<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h3><a href="{{post.link}}">{{post.title}}</a></h3>
		<p>
			{% if post.summary %}{{post.summary}}{% else %}{{post.body | truncate(20) }}{% endif %}			
		</p>
		{% if post.get_thumbnail %}
			<a href="{{post.link}}"><img src="{{post.thumbnail.src|resize(500, 300, 'center')}}" /></a>
		{% endif %}
	{% endblock %}
</article>